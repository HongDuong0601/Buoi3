<!DOCTYPE html>
<html>
	<head>
		<title>Bài 4</title>
		<meta charset="utf-8" />
	</head>
	<body>
		<script>
			function KiemTra()
			{
				var tdn=f.TDN.value;
				var mk=f.MK.value;
				var nl=f.NLMK.value;
				
				if(tdn==""||mk==""|nl=="")
				{
					alert('Nhập vô mới được mấy ô đó mới được bà ơi')
					return false;
				}
				
				if(tdn.length < 6)
				{
					alert('Tên đăng nhập không được bé hơn 6 ký tự');
					return false;
				}
				
				//thông báo lỗi khi mk không khớp
				if(nlmk != mk)
				{
					alert('Mật khẩu sai rồi kìa');
					return false;
				}
				
				return true;
			}
		</script>
		<form name='f'>
		
			<table>
				<tr>
					<td>Tên đăng nhập: </td>
					<td><input type="text" name="TDN">  (nhiều hơn 6 ký tự nhe ^^)</td>
				</tr>
				<tr>
					<td>Mật khẩu: </td>
					<td><input type="password" name="MK"></td>
				</tr>
				<tr>
					<td>Nhập lại mật khẩu: </td>
					<td><input type="password" name="NLMK"></td>
				</tr>
			</table>
			<button type="submit" onclick="return KiemTra()">Kiểm tra</button>
		</form>
	</body>
</html>